extends layout.pug

block title
  title IBM Watson Translation

block content
  .container
    form(id='mainform')
      .row
        #main-header
          h1 IBM Waston Translator
        #input-space.col-xs-12
          .form-group
            label(for='inputText') Input Text:
            textarea#inputText.form-control(placeholder='Input text...')
        #select-space.col-xs-12.col-md-6
          .form-group
            label(for='inputLanguage') Destination Language:
            select(id='languageSelect')
              option(value='af') Afrikaans
              option(value='ar') Arabic
              option(value='az') Azerbaijani
              option(value='ba') Bashkir
              option(value='be') Belarusian
              option(value='bg') Bulgarian
              option(value='bn') Bengali
              option(value='bs') Bosnian
              option(value='cs') Czech
              option(value='cv') Chuvash
              option(value='da') Danish
              option(value='de') German
              option(value='el') Greek
              option(value='en') English
              option(value='eo') Esperanto
              option(value='es') Spanish
              option(value='et') Estonian
              option(value='eu') Basque
              option(value='fa') Persian
              option(value='fi') Finnish
              option(value='fr') French
              option(value='gu') Gujarati
              option(value='he') Hebrew
              option(value='hi') Hindi
              option(value='ht') Haitian
              option(value='hu') Hungarian
              option(value='hy') Armenian
              option(value='id') Indonesian
              option(value='is') Icelandic
              option(value='it') Italian
              option(value='ja') Japanese
              option(value='ka') Georgian
              option(value='kk') Kazakh
              option(value='km') Central Khmer
              option(value='ko') Korean
              option(value='ku') Kurdish
              option(value='ky') Kirghiz
              option(value='lt') Lithuanian
              option(value='lv') Latvian
              option(value='ml') Malayalam
              option(value='mn') Mongolian
              option(value='nb') Norwegian Bokmal
              option(value='nl') Dutch
              option(value='nn') Norwegian Nynorsk
              option(value='pa') Panjabi
              option(value='pl') Polish
              option(value='ps') Pushto
              option(value='pt') Portuguese
              option(value='ro') Romanian
              option(value='ru') Russian
              option(value='sk') Slovakian
              option(value='so') Somali
              option(value='sq') Albanian
              option(value='sv') Swedish
              option(value='ta') Tamil
              option(value='te') Telugu
              option(value='tr') Turkish
              option(value='uk') Ukrainian
              option(value='ur') Urdu
              option(value='vi') Vietnamese
              option(value='zh') Chinese
              option(value='zh-TW') Traditional Chinese
        #button-space.col-xs-12.col-md-6
          .form-group
            button#submit-btn(type='submit' class='btn btn-default') Submit
      .row
        .col-xs-12
          p#result-pane
      .row
        .col-xs-12
          table.table
            thead
              td Input String
              td Lang
              td Translated String
            tbody#history

  script(src='js/app.js')
